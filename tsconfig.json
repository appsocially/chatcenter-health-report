{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "declaration": true,
    "paths": {
      "shared/*": [ "../dist/shared/src/*", "../../shared/src/*" ],
    },
    "lib": [
      "esnext.asynciterable",
      "es6",
      "dom"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/*.spec.ts",
  ]
}